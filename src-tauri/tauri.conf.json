{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "test-tauri",
  "version": "0.1.0",
  "identifier": "com.luqueee.dev",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3007",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },

  "app": {
    "windows": [
      {
        "title": "RemoteCord",
        "width": 1000,
        "height": 600,
        "resizable": false,
        "fullscreen": false
      }
    ],
    "security": {
      "headers": {
        "Cross-Origin-Opener-Policy": "same-origin",
        "Cross-Origin-Embedder-Policy": "require-corp",
        "Timing-Allow-Origin": [
          "https://developer.mozilla.org",
          "https://example.com",
          "https://preview.luqueee.dev"
        ],
        "Access-Control-Expose-Headers": "Tauri-Custom-Header",
        "Tauri-Custom-Header": {
          "key1": "'value1' 'value2'",
          "key2": "'value3'"
        }
      },
      "csp": "default-src 'self'; connect-src ipc: http://ipc.localhost"
    }
  },

  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["something", "my-app"]
      }
    }
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
